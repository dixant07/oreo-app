# ===========================================
# Environment Variables Template
# ===========================================
# Copy this file to .env.local for development
# For production, set these in your deployment platform

# ===========================================
# Firebase Configuration (Client-side)
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ===========================================
# Firebase Admin SDK (Server-side)
# ===========================================
# OPTION 1 (Recommended for Production):
# Base64 encode your service account JSON and set it here:
# To create this value, run: base64 -w 0 your-service-account.json
FIREBASE_SERVICE_ACCOUNT_KEY=

# OPTION 2 (For Local Development):
# Set the path to your service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your-service-account.json

# Firebase project ID (fallback)
FIREBASE_PROJECT_ID=your-project-id

# ===========================================
# Server URLs
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MATCHMAKING_URL=http://localhost:4001
NEXT_PUBLIC_GAMES_URL=http://localhost:3000/games

# ===========================================
# Cashfree Payment Gateway
# ===========================================
CASHFREE_APP_ID=
CASHFREE_SECRET_KEY=
NEXT_PUBLIC_CASHFREE_ENVIRONMENT=sandbox

# ===========================================
# TURN Server Configuration
# ===========================================
TURN_SERVER_URL=
TURN_SECRET=
